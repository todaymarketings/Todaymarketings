---
import Layout from "../layouts/Layout.astro";
// SEO metadata for the homepage
const seoData = {
  title: "Contact Us",
  description:
    "Ready to elevate your marketing strategy with AI? Connect with the experts at Today Marketings for data-driven solutions, personalized support, and results that matter. Let's grow your brand together.",
  keywords:
    "AI marketing consultation, contact Today Marketings, speak with marketing experts, AI-driven marketing support, digital strategy team, data-driven marketing help, marketing agency contact, AI-powered growth solutions.",
  canonical: "https://todaymarketings.com/",
  image: "../assets/favicon.png",
  ogType: "website",
};
---

<Layout title="Contact Us">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 mt-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Left Column - Contact Information -->
      <div class="pr-0 md:pr-12">
        <div class="mb-8">
          <h1 class="text-5xl font-bold">
            <span class="text-[#D80032]">Connect</span> with Our
            <br />Marketing Experts
          </h1>
          <p class="mt-4 text-gray-700">
            Ready to elevate your marketing with the power of AI? Get in touch
            with our team of data-driven strategists and creative thinkers to
            turn your vision into reality.
          </p>
        </div>

        <!-- Contact Section with Icons on Left and Details on Right -->
        <div class="flex mt-10">
          <!-- Contact Icons Column - Left -->
          <div class="flex flex-col space-y-6 mr-6">
            <div
              id="phoneIcon"
              class="contact-icon flex items-center cursor-pointer hover:text-[#D80032] transition-colors duration-200"
              data-type="phone"
            >
              <div class="mr-2">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-8 w-8 text-[#D80032]"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <span class="text-gray-700">Call Us</span>
            </div>

            <div
              id="emailIcon"
              class="contact-icon flex items-center cursor-pointer hover:text-[#D80032] transition-colors duration-200"
              data-type="email"
            >
              <div class="mr-2">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-8 w-8 text-[#D80032]"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <span class="text-gray-700">Email Us</span>
            </div>

            <div
              id="addressIcon"
              class="contact-icon flex items-center cursor-pointer hover:text-[#D80032] transition-colors duration-200"
              data-type="address"
            >
              <div class="mr-2">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-8 w-8 text-[#D80032]"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <span class="text-gray-700">Find Us</span>
            </div>
          </div>

          <!-- Contact Details Panel - Right -->
          <div
            id="contactDetailsPanel"
            class="flex-1 bg-gray-100 p-6 rounded-lg"
          >
            <!-- Phone content -->
            <div id="phoneContent" class="contact-content">
              <h3 class="text-xl font-semibold mb-4 text-[#D80032]">Call Us</h3>
              <p class="text-gray-700">
                <a href="tel:0263111913" class="hover:text-[#D80032]"
                  >0263111913</a
                >
              </p>
              <p class="text-sm text-gray-600 mt-2">
                Our team is available Monday through Friday, 9AM to 5PM.
              </p>
            </div>

            <!-- Email content -->
            <div id="emailContent" class="contact-content hidden">
              <h3 class="text-xl font-semibold mb-4 text-[#D80032]">
                Email Us
              </h3>
              <p class="text-gray-700">
                <a
                  href="mailto:info@todaymarketings.com"
                  class="hover:text-[#D80032]">info@todaymarketings.com</a
                >
              </p>
              <p class="text-sm text-gray-600 mt-2">
                We typically respond to emails within 24 hours during business
                days.
              </p>
            </div>

            <!-- Address content -->
            <div id="addressContent" class="contact-content hidden">
              <h3 class="text-xl font-semibold mb-4 text-[#D80032]">
                Our Location
              </h3>
              <p class="text-gray-700 mb-4">
                341 Nilaveli Rd, Trincomalee 31000, Sri Lankna
              </p>
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3944.8573582174868!2d81.21387857477544!3d8.609690691435864!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3afbbc50d0c9ebe5%3A0x419962b760c43f69!2s341%20Nilaveli%20Rd%2C%20Trincomalee!5e0!3m2!1sen!2slk!4v1745301317473!5m2!1sen!2slk"
                width="100%"
                height="250"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column - Contact Form -->
      <div class="bg-[#3D0C11] rounded-lg p-8 text-white mt-12 md:mt-0">
        <!-- Important: Direct form submission without JS interference -->
        <form
          id="contactForm"
          action="https://formbold.com/s/3Vyw0"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <div>
              <label for="fullName" class="block text-sm font-medium mb-2"
                >Full Name <span class="text-red-500">*</span></label
              >
              <input
                type="text"
                id="fullName"
                name="fullName"
                placeholder="Full Name"
                class="w-full p-2 rounded text-gray-900"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium mb-2"
                >Email Address <span class="text-red-500">*</span></label
              >
              <input
                type="email"
                id="email"
                name="email"
                placeholder="Email Address"
                class="w-full p-2 rounded text-gray-900"
                required
              />
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <div>
              <label for="phone" class="block text-sm font-medium mb-2"
                >Phone Number</label
              >
              <input
                type="tel"
                id="phone"
                name="phone"
                placeholder="Phone Number"
                class="w-full p-2 rounded text-gray-900"
              />
            </div>
            <div>
              <label for="subject" class="block text-sm font-medium mb-2"
                >Subject</label
              >
              <input
                type="text"
                id="subject"
                name="subject"
                placeholder="Subject"
                class="w-full p-2 rounded text-gray-900"
              />
            </div>
          </div>

          <div class="mb-6">
            <label for="message" class="block text-sm font-medium mb-2"
              >Tell Us About Your Project <span class="text-red-500">*</span
              ></label
            >
            <textarea
              id="message"
              name="message"
              rows="6"
              placeholder="Leave your message here"
              class="w-full p-2 rounded text-gray-900"
              required></textarea>
          </div>

          <button
            type="submit"
            id="submitBtn"
            class="bg-[#F78CA2] hover:bg-[#D80032] text-white font-medium py-2 px-4 rounded inline-flex items-center"
          >
            <span>SUBMIT</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 ml-2"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
            </svg>
          </button>
        </form>
      </div>
    </div>
  </div>

  <!-- Success Message Toast Notification -->
  <div id="successModal" class="fixed bottom-8 right-8 z-50 hidden">
    <div
      class="bg-gradient-to-r from-[#3D0C11] to-[#D80032] text-white p-4 rounded-lg shadow-lg max-w-sm animate-fade-in"
    >
      <div class="flex items-start">
        <div class="flex-shrink-0 pt-0.5">
          <svg
            class="h-6 w-6 text-white"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium">Success!</p>
          <p class="mt-1 text-xs opacity-90">
            Your message has been sent successfully. We'll get back to you soon.
          </p>
        </div>
        <div class="ml-4 flex-shrink-0 flex">
          <button
            id="closeModal"
            class="inline-flex text-white focus:outline-none"
          >
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path
                fill-rule="evenodd"
                d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Add this CSS for the fade-in animation -->
  <style>
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .animate-fade-in {
      animation: fadeIn 0.3s ease-out forwards;
    }
    .active-icon {
      color: #d80032 !important;
      font-weight: bold;
    }
  </style>
</Layout>

<script>
  // Contact Icon interaction only - form validation removed to ensure direct submission
  document.addEventListener("DOMContentLoaded", function () {
    const contactIcons = document.querySelectorAll(".contact-icon");
    const contactContents = document.querySelectorAll(".contact-content");
    const closeModalBtn = document.getElementById("closeModal");

    // Set phone as default active contact method on page load
    showContactDetails("phone");

    // Contact icon click handler
    contactIcons.forEach((icon) => {
      icon.addEventListener("click", function () {
        const type = this.getAttribute("data-type");
        showContactDetails(type);
      });
    });

    // Function to show contact details based on type
    function showContactDetails(type) {
      // Hide all content sections first
      contactContents.forEach((content) => {
        content.classList.add("hidden");
      });

      // Show the selected content
      document.getElementById(`${type}Content`).classList.remove("hidden");

      // Update active icon styling
      contactIcons.forEach((icon) => {
        const iconType = icon.getAttribute("data-type");
        const iconSpan = icon.querySelector("span");

        if (iconType === type) {
          iconSpan.classList.add("active-icon");
        } else {
          iconSpan.classList.remove("active-icon");
        }
      });
    }

    // Close notification when clicking the close button
    if (closeModalBtn) {
      closeModalBtn.addEventListener("click", function () {
        document.getElementById("successModal").classList.add("hidden");
      });
    }

    // Add success parameter check to show success message when redirected back
    window.addEventListener("load", function () {
      const urlParams = new URLSearchParams(window.location.search);
      if (urlParams.has("success") && urlParams.get("success") === "true") {
        document.getElementById("successModal").classList.remove("hidden");

        // Hide after 5 seconds
        setTimeout(() => {
          document.getElementById("successModal").classList.add("hidden");
        }, 5000);
      }
    });
  });
</script>

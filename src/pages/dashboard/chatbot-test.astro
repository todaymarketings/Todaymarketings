---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import ChatbotTest from "../../components/chatbot/ChatbotTest.jsx";
---

<DashboardLayout title="Test Chatbot" currentPage="chatbot">
  <div class="bg-white rounded-lg shadow-sm p-6">
    <h2 class="text-xl font-semibold mb-4 text-[#3D0C11]">
      Chatbot Test Interface
    </h2>

    <p class="text-[#3D0C11] mb-6">
      Use this interface to test how your chatbot responds to user queries. This
      is a simulation - responses are pre-programmed for testing purposes.
    </p>

    <div class="flex justify-center">
      <ChatbotTest client:load />
    </div>

    <div class="mt-6 flex justify-end">
      <a
        href="/dashboard/chatbot"
        class="bg-[#D80032] text-white px-4 py-2 rounded hover:bg-[#3D0C11] transition-colors"
      >
        Back to Configuration
      </a>
    </div>
  </div>
</DashboardLayout>

<script>
  // Image slider functionality
  document.addEventListener("DOMContentLoaded", function () {
    const imageButtons = document.querySelectorAll(".image-button");
    const contentSlides = document.querySelectorAll(".content-slide");
    const timelineArrows = document.querySelectorAll(".timeline-arrow");
    let currentSlide = 0;
    const slideCount = contentSlides.length;

    // Initialize - show the first arrow
    if (slideCount > 1) {
      document.querySelector(".arrow-0-1").classList.add("active-arrow");
    }

    // Function to handle arrows
    function updateArrows(currentIndex, nextIndex) {
      // Reset all arrows
      timelineArrows.forEach((arrow) => {
        arrow.classList.remove("active-arrow", "reverse-arrow", "next-arrow");
      });

      // Determine which arrow to activate
      if (nextIndex > currentIndex) {
        // Moving forward
        const arrowClass = `.arrow-${currentIndex}-${nextIndex}`;
        const arrow = document.querySelector(arrowClass);
        if (arrow) arrow.classList.add("active-arrow");
      } else if (nextIndex < currentIndex) {
        // Moving backward (activate the previous arrow)
        const arrowClass = `.arrow-${nextIndex}-${currentIndex}`;
        const arrow = document.querySelector(arrowClass);
        if (arrow) arrow.classList.add("reverse-arrow", "active-arrow");
      }

      // Next arrow (for continuous movement)
      if (nextIndex < slideCount - 1) {
        const nextArrowClass = `.arrow-${nextIndex}-${nextIndex + 1}`;
        const nextArrow = document.querySelector(nextArrowClass);
        if (nextArrow) nextArrow.classList.add("next-arrow");
      }
    }

    // Function to change slide
    function changeSlide(index) {
      // Handle arrow animations
      updateArrows(currentSlide, index);

      // Update active image button
      imageButtons.forEach((button) => {
        button.classList.remove("active");
        button.classList.remove("border-[#D80032]");
        button.classList.add("border-transparent");
      });
      imageButtons[index].classList.add("active", "border-[#D80032]");

      // Update content slides with animation
      contentSlides.forEach((slide) => {
        slide.classList.add("hidden");
        slide.classList.remove("active");
      });
      setTimeout(() => {
        contentSlides[index].classList.remove("hidden");
        contentSlides[index].classList.add("active");
      }, 50);

      // Update current slide index
      currentSlide = index;

      // Ensure the active image is in view
      imageButtons[index].scrollIntoView({
        behavior: "smooth",
        block: "nearest",
        inline: "center",
      });
    }

    // Auto-change slides every 3 seconds
    let slideInterval = setInterval(() => {
      let nextSlide = (currentSlide + 1) % slideCount;
      changeSlide(nextSlide);
    }, 3000);

    // Add click event listeners to image buttons
    imageButtons.forEach((button) => {
      button.addEventListener("click", function () {
        // Clear the auto-slide interval
        clearInterval(slideInterval);

        // Change to the clicked slide
        const slideIndex = parseInt(this.getAttribute("data-index"));
        changeSlide(slideIndex);

        // Restart auto-slide
        slideInterval = setInterval(() => {
          let nextSlide = (currentSlide + 1) % slideCount;
          changeSlide(nextSlide);
        }, 3000);
      });
    });

    // Handle responsiveness
    function handleResize() {
      // Check if we need to scroll to the active image in smaller viewports
      if (window.innerWidth < 768 && currentSlide > 0) {
        imageButtons[currentSlide].scrollIntoView({
          behavior: "auto",
          block: "nearest",
          inline: "center",
        });
      }
    }

    // Listen for window resize events
    window.addEventListener("resize", handleResize);

    // Initial call to ensure proper layout
    handleResize();
  });
</script>

<style>
  /* Add some custom animation effects that might not be possible with just Tailwind classes */
  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.8;
    }
  }

  /* Set minimum height for the image slider to avoid layout shifts */
  .image-slider {
    min-height: 240px;
  }

  /* Timeline container styling - improved for mobile scrolling with hidden scrollbar */
  .timeline-container {
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth;
    position: relative;
  }

  /* Hide scrollbar for Chrome, Safari and Opera */
  .hide-scrollbar::-webkit-scrollbar {
    display: none;
    width: 0;
    height: 0;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .hide-scrollbar {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }

  /* Active image styling - increased prominence */
  .image-button.active {
    transform: scale(1.1);
    border-color: #d80032;
    box-shadow: 0 0 15px rgba(216, 0, 50, 0.3);
    z-index: 10;
    position: relative;
  }

  /* Content slide transitions */
  .content-slide {
    transition: all 0.3s ease-in-out;
    opacity: 0;
    transform: translateY(10px);
    position: absolute;
    width: 100%;
    top: 0;
    left: 0;
  }

  .content-slide.active {
    animation: fadeIn 0.5s ease-in-out forwards;
    position: relative;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Timeline Arrow Styling - improved visibility */
  .timeline-arrow {
    width: 40px;
    height: 20px;
    position: relative;
    opacity: 0.3;
    transition: all 0.5s ease;
  }

  @media (max-width: 640px) {
    .timeline-arrow {
      width: 30px;
    }
  }

  .timeline-arrow.active-arrow {
    opacity: 1;
  }

  .arrow-line {
    height: 2px;
    background-color: #d80032;
    position: absolute;
    top: 50%;
    left: 0;
    right: 8px;
    transform: translateY(-50%);
    transform-origin: left;
    transition: all 0.5s ease;
  }

  .active-arrow .arrow-line {
    animation: growLine 1s forwards;
  }

  .arrow-head {
    width: 0;
    height: 0;
    border-top: 6px solid transparent;
    border-bottom: 6px solid transparent;
    border-left: 8px solid #d80032;
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
  }

  .reverse-arrow .arrow-head {
    left: 0;
    right: auto;
    border-left: none;
    border-right: 8px solid #d80032;
  }

  .reverse-arrow .arrow-line {
    left: 8px;
    right: 0;
    transform-origin: right;
  }

  @keyframes growLine {
    0% {
      transform: translateY(-50%) scaleX(0);
    }
    100% {
      transform: translateY(-50%) scaleX(1);
    }
  }

  /* Next arrow styling */
  .next-arrow {
    opacity: 0.5;
  }

  /* Content slides container positioning */
  .content-slides {
    position: relative;
  }

  /* Media queries for better responsiveness */
  @media (max-width: 640px) {
    .image-button img {
      width: 60px;
      height: 60px;
    }

    .content-slide {
      padding: 12px;
    }
  }

  @media (max-width: 480px) {
    .image-button img {
      width: 50px;
      height: 50px;
    }

    .image-button.active {
      transform: scale(1.15);
    }

    .timeline-container {
      padding-bottom: 12px;
    }
  }
</style>
